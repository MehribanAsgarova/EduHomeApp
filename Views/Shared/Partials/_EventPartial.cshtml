@model List<Event>
@foreach (Event item in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a href="event/detail?id=@item.Id">
                    <img src="~/img/event/@item.ImageName" alt="event">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    <h3>@item.Date.ToString("dd MMM", new CultureInfo("en-US"))</h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a href="event-details.html">ADVANCE PHP WORKSHOP</a></h4>
                <ul>
                    <li><span>time:</span> @item.StartTime.ToString("hh:mm tt", new CultureInfo("en-US")) - @item.EndTime.ToString("hh:mm tt", new CultureInfo("en-US"))</li>
                    <li><span>venue</span> @item.Location</li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" href="event/detail?id=@item.Id">join now</a>
                </div>
            </div>
        </div>
    </div>
}