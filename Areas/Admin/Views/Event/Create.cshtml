@model SpeakerEventVM
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Event</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Event.Title"></label>
                        <input class="form-control" asp-for="Event.Title">
                        <span class="text-danger" asp-validation-for="Event.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Description"></label>
                        <input class="form-control" asp-for="Event.Description">
                        <span class="text-danger" asp-validation-for="Event.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Location"></label>
                        <input class="form-control" asp-for="Event.Location">
                        <span class="text-danger" asp-validation-for="Event.Location"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.Date"></label>
                        <input class="form-control" asp-for="Event.Date">
                        <span class="text-danger" asp-validation-for="Event.Date"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.StartTime"></label>
                        <input class="form-control" asp-for="Event.StartTime">
                        <span class="text-danger" asp-validation-for="Event.StartTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Event.EndTime"></label>
                        <input class="form-control" asp-for="Event.EndTime">
                        <span class="text-danger" asp-validation-for="Event.EndTime"></span>
                    </div>

