@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="table-responsive pt-3">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Setting
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Course course in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/course/@course.ImageName" style="width:50px; height:50px; border-radius:0" />
                        </td>
                        <td>
                            @course.CourseName
                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@course.Id">
                                Detail
                            </a>

                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@course.Id">
                                Update
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@course.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


