@model Teacher
@{
    ViewData["Title"] = "Detail";
}


<div class=" row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-text">
                    <img src="~/img/teacher/@Model.ImageName" style="width:50px; height:50px; border-radius:0" />
                </div>
                <h4>@Model.Name</h4>
                <h4>@Model.Position</h4>
                
                <p >@Html.Raw(Model.AboutMe)</p>
                <a asp-action="Index">Go Back</a>

            </div>
        </div>
    </div>
</div>


