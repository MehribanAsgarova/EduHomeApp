@model Teacher
@{
    ViewData["Title"] = "Update";
}


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Old Photo</h4>
                <img src="~/img/teacher/@Model.ImageName" style="width:400px; height:300px; border-radius:0;" alt="Alternate Text" />
                <h4> @Model.Name</h4>
                <h4> @Model.Position</h4>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position"></label>
            <input class="form-control" asp-for="Position">
            <span class="text-danger" asp-validation-for="Position"></span>
        </div>
        <div class="form-group">
            <label asp-for="AboutMe"></label>
            <input class="form-control" asp-for="AboutMe">
            <span class="text-danger" asp-validation-for="AboutMe"></span>
        </div>
        <div class="form-group">
            <label asp-for="Degree"></label>
            <input class="form-control" asp-for="Degree">
            <span class="text-danger" asp-validation-for="Degree"></span>
        </div>
        <div class="form-group">
            <label asp-for="Experience"></label>
            <input class="form-control" asp-for="Experience">
            <span class="text-danger" asp-validation-for="Experience"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hobby"></label>
            <input class="form-control" asp-for="Hobby">
            <span class="text-danger" asp-validation-for="Hobby"></span>
        </div>
        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input class="form-control" asp-for="Faculty">
            <span class="text-danger" asp-validation-for="Faculty"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input class="form-control" asp-for="Phone">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skype"></label>
            <input class="form-control" asp-for="Skype">
            <span class="text-danger" asp-validation-for="Skype"></span>
        </div>
        <div class="form-group">
            <label asp-for="Facebook"></label>
            <input class="form-control" asp-for="Facebook">
            <span class="text-danger" asp-validation-for="Facebook"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pinterest"></label>
            <input class="form-control" asp-for="Pinterest">
            <span class="text-danger" asp-validation-for="Pinterest"></span>
        </div>
        <div class="form-group">
            <label asp-for="Vimeo"></label>
            <input class="form-control" asp-for="Vimeo">
            <span class="text-danger" asp-validation-for="Vimeo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Twitter"></label>
            <input class="form-control" asp-for="Twitter">
            <span class="text-danger" asp-validation-for="Twitter"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.Language"></label>
            <input class="form-control" asp-for="Skill.Language">
            <span class="text-danger" asp-validation-for="Skill.Language"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.TeamLeader"></label>
            <input class="form-control" asp-for="Skill.TeamLeader">
            <span class="text-danger" asp-validation-for="Skill.TeamLeader"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.Development"></label>
            <input class="form-control" asp-for="Skill.Development">
            <span class="text-danger" asp-validation-for="Skill.Development"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.Design"></label>
            <input class="form-control" asp-for="Skill.Design">
            <span class="text-danger" asp-validation-for="Skill.Design"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.Innovation"></label>
            <input class="form-control" asp-for="Skill.Innovation">
            <span class="text-danger" asp-validation-for="Skill.Innovation"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skill.Communication"></label>
            <input class="form-control" asp-for="Skill.Communication">
            <span class="text-danger" asp-validation-for="Skill.Communication"></span>
        </div>

        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" asp-for="Photo" accept="image/*">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-warning mr-2">Update</button>
        <a class="btn btn-dark" asp-action="Index">Go Back</a>
    </form>
</div>

